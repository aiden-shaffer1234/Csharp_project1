<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.eCommerce.Views.InventoryManagementView"
             Title="InventoryManagementView">
    <VerticalStackLayout>
        <Label 
            Text="Inventory Management"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ListView
            ItemsSource="{Binding Path=Products}"
            SelectedItem="{Binding ProductSelected}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Display}"/>
                            <Button Grid.Column="1" Text="Edit"/>
                            <Button Grid.Column="2" Text="Delete"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
            Text="Add Item"
            Clicked="AddClicked"/>
        <Button
             Text="Edit Item"
             Clicked="UpdateClicked"/>
        <Button
            Text="Delete Item"
            Clicked="DeleteClicked"/>
        <Button
                Text="Cancel"
                Clicked="CancelClicked"/>
    </VerticalStackLayout>
</ContentPage>